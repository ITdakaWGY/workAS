$(function() {
	//一般直接写在一个js文件中
	layui.use(['layer', 'form', 'laydate'], function() {
		var layer = layui.layer,
			form = layui.form;

		var laydate = layui.laydate;
		 laydate.render({
			    elem: '#tjrq', //指定元素
			  });

		var dwData = {};
		getDwData(dwData);


		$('body').on('click','#searchBtn',function(){
		  	var companycode = $('#danwei').val();
		  	if(companycode==""){
		  		layer.alert("未选择单位");
		  		return false;
		  	}
		  	var tjrq = $('#tjrq').val();
		  	var sfz = $('#sfz').val();
		  	var data = {};
		  	if(tjrq==""&&sfz==""){
		  		var data = {
				companycode: companycode,
			}
		  	}else if(tjrq==""){
		  		data = {
				companycode: companycode,
				sfz: sfz,
			}
		  	}else if(sfz==""){
				var data = {
				companycode: companycode,
				tjrq: tjrq,
			}
			}else{
				var data = {
				companycode: companycode,
				tjrq: tjrq,
				sfz: sfz,
			}
			}

			getData(data);

		})


		$('body').on('click', '.yingtj', function() {
            var sfz = $(this).attr('data-sfz');
			top.layer.open({
				type: 2,
				title: '应体检项目数',
				shadeClose: true,
				shade: 0.8,
				area: ['80%', '80%'],
				content: 'page/jindu/gerenall.html?sfz='+sfz,
			});
		})
		$('body').on('click', '.yitj', function() {
            var sfz = $(this).attr('data-sfz');
			top.layer.open({
				type: 2,
				title: '已体检项目数',
				shadeClose: true,
				shade: 0.8,
				area: ['80%', '80%'],
				content: 'page/jindu/gerenyi.html?sfz='+sfz,

			});
		})
		$('body').on('click', '.weitj', function() {
			var sfz = $(this).attr('data-sfz');
			top.layer.open({
				type: 2,
				title: '未体检项目数',
				shadeClose: true,
				shade: 0.8,
				area: ['80%', '80%'],
				content: 'page/jindu/gerenWei.html?sfz='+sfz,
			});
		})

	//接受结果集，往表格进行数据填充
	function setdwdata(result) {
	debugger;
		var html = '';
		for(var i = 0; i < result.length; i++) {
			html += `<option value="${result[i].companycode}">${result[i].companyname}</option>`;
		}
		$('#danwei').html(html);
		getnull();
		form.render();

	}

	function getDwData(data) {
		if(typeof(data) == "undefined") {
			data = {};
		}
		var result;
		$.ajax({
			type: "get",
			url: BaseUrl + 'companyinfo/selectlist',
			data: data,
			async: true,
			success: function(data) {
				if(data.success) {
					result = data.queryResult.list;
					setdwdata(result);
				} else {
					layer.msg(data.message);
				}

			}
		});
	}


	});



	//初次请求第一页的数据，并初始化分页,如果条件查询，请传入data
function getData(data) {
	if(typeof(data)=="undefined"){
		data={};
	}
	var urls = 'progress/list/1/' + pageSize;
	var loading = layer.msg('正在查询...', {
		icon: 16,
		shade: 0.2,
		time: false
	});
	var total;
	var result;
	$.ajax({
		type: "get",
		url: BaseUrl + urls,
		data: data,
		async: true,
		success: function(data) {
			if(data.success) {
				result = data.queryResult.list;
				total = data.queryResult.total;
				var totalPage = total % pageSize == 0 ? (total / pageSize) : (Math.floor(total / pageSize) + 1);
				$("#pagination3").pagination({
					//totalPage---总条数   isshow:是否显示上一页下一页 首页末页   cunt  渲染的页码展示总数
					totalPage: totalPage,
					pageCount: total,
					isShow: true,
					count: 10,
					homePageText: "首页",
					endPageText: "尾页",
					prevPageText: "上一页",
					nextPageText: "下一页",
					callback: function(current) {
						var data={};
						getPageData(current, data);

					}
				});
				setdata(result);
			} else {
				layer.msg(data.message);
			}
			layer.close(loading);
		},
		error: function(data) {
			layer.msg('程序错误!');
			layer.close(loading);
		}

	});
}

//接受结果集，往表格进行数据填充
function setdata(result) {
	if(result.length == 0) {
		var nodata = '<div class="nodata">暂无数据!</div>';
		$('#tbody').html(nodata);
		return false;
	}
	var html = '';

	for(var i = 0; i < result.length; i++) {
        var tjrq = getDate(result[i].tjrq);
		html += `<tr>
								<td>${i+1}</td>
								<td>${result[i].companyname}</td>
								<td>${tjrq}</td>
								<td>${result[i].xm}</td>
								<td class="yingtj color-lan" data-sfz="${result[i].sfz}">${result[i].zcount}</td>
								<td class="yitj color-lan" data-sfz="${result[i].sfz}">${result[i].yjcount}</td>
								<td class="weitj color-lan" data-sfz="${result[i].sfz}">${result[i].wjcount}</td>
								<td>${result[i].brdh}</td>
							</tr>`;
	}
	$('#tbody').html(html);
	getnull();
}



//获取指定的页码数据，如果是条件查询，请传入data参数
function getPageData(page, data) {
	if(typeof(data)=="undefined"){
		data={};
	}
	var urls = 'progress/list/' + page + '/' + pageSize;
	var loading = layer.msg('正在查询...', {
		icon: 16,
		shade: 0.2,
		time: false
	});
	var result;
	$.ajax({
		type: "get",
		url: BaseUrl + urls,
		async: true,
		data:data,
		success: function(data) {
			if(data.success) {
				result = data.queryResult.list;
				setdata(result);
			} else {
				layer.msg(data.message);
			}
			layer.close(loading);
		},
		error: function(data) {
			layer.msg('程序错误');
			layer.close(loading);
		}
	});
}
})
